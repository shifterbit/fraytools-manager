<?xml version="1.0" encoding="UTF-8"?>
<component type="desktop-application">
  <id>io.github.shifterbit.FrayToolsManager</id>
  
  <name>FrayTools Manager</name>
  <summary>A Plugin and Template Manager for FrayTools</summary>
  
  <metadata_license>CC-BY-SA-4.0</metadata_license>
  <project_license>LGPL-2.1-or-later</project_license>
  <url type="homepage">https://github.com/shifterbit/fraytools-manager</url>
  <developer id="io.github.shifterbit">
    <name>shifterbit</name>
    </developer>
  <content_rating type="oars-1.0" />
  
  <supports>
    <control>pointing</control>
    <control>keyboard</control>
    <control>touch</control>
  </supports>

  <description>
    <p>
      A GUI Plugin and Template Manager for FrayTools, that helps you manage your plugins and templates. Currently supports:

    </p>
    <ul>
      <li>Viewing Changelogs</li>
      <li>Downloading, Installing, Switching Versions(and Updating), Uninstalling Plugins and Templates</li>
      <li>Builtin Plugin detection for existing plugins and templates</li>
      <li>Supports all the official plugins and templates out of the box</li>
      <li>Caches Plugin and Template downloads for fast reinstallations</li>
      <li>Supports adding custom plugin sources outside the official ones</li>
      <li>Editing And Template Sources</li>
    </ul>
  </description>
  
  <launchable type="desktop-id">io.github.shifterbit.FrayToolsManager.desktop</launchable>
